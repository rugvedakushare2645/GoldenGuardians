<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - GoldenGuardians</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/GoldenGuardians.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm  mb-3" >
			<!--border-bottom box-shadow navbar-light-->
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-page="/Index" ;"><p style="font-family: Verdana, Geneva, Tahoma, sans-serif; font-size: 28px; color: black;  font-weight:bold;">GoldenYears Guardian</p></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="margin-left:15%; font-family: Verdana, Geneva, Tahoma, sans-serif;">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-page="/Index" style="color: #9B4444;">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-page="/AboutUs" style="color: #9B4444;">About Us</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-page="/Services" style="color: #9B4444;">Services</a>
						</li>	
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-page="/Gallery" style="color: #9B4444;">Gallery</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-page="/Booking" style="color: #9B4444;">Make Booking</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-page="/ContactUs" style="color: #9B4444;">Contact Us</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
		<style>

			header {
				background: #9EB384;
				position: sticky;
				top: 0;
				
			}

			
		</style>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
		<style>
			.container{
				margin:0;
				padding:0;
			}
		</style>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 &nbsp; <a asp-area="" asp-page="/Index">GoldenYears Guardian</a>
		</div>
		<style>
			footer {
				height: 70px;
				background: #9EB384;
				
			}
		</style>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	

	@await RenderSectionAsync("Scripts", required: false)

	<style>
		body {
			background-color: #FAF1E4;
		}
	</style>

</body>
</html>